{
  "name": "neural-memory",
  "version": "2.17.0",
  "description": "Reflex-based memory system for AI agents — stores experiences as interconnected neurons and recalls them through spreading activation, mimicking how the human brain works.",
  "author": {
    "name": "NeuralMemory Contributors"
  },
  "homepage": "https://github.com/nhadaututtheky/neural-memory",
  "repository": "https://github.com/nhadaututtheky/neural-memory",
  "license": "MIT",
  "keywords": [
    "memory",
    "neural",
    "mcp",
    "agents",
    "ai",
    "graph",
    "recall",
    "llm",
    "persistence",
    "associative"
  ],
  "features": [
    "28 MCP tools for persistent AI memory",
    "Knowledge base training from PDF/DOCX/PPTX/HTML/JSON/XLSX/CSV",
    "Spreading activation recall (not keyword search)",
    "Pinned KB memories — permanent, skip decay/prune",
    "Tool memory — learns which tools work for which tasks",
    "Multi-device sync with conflict resolution",
    "Spaced repetition (Leitner boxes)",
    "Brain versioning, snapshots, rollback",
    "Fernet encryption for sensitive content",
    "VS Code extension for visual brain exploration"
  ],
  "skills": "./skills",
  "commands": "./commands",
  "agents": "./agents",
  "hooks": "./hooks/hooks.json",
  "mcpServers": {
    "neural-memory": {
      "command": "uvx",
      "args": ["--from", "neural-memory", "nmem-mcp"]
    }
  }
}
